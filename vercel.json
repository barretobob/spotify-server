{
  "version": 2,
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x",
      "memory": 128
    }
  },
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/success.html$", "dest": "/success.html" },
    { "src": "^/api/(.*)$", "dest": "/api/$1" }
  ],
  "experimental": {
    "responseStreaming": true
  }
}
